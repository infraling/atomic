<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.corpus_tools.atomic.processingComponents.custom" name="Custom processing components for corpora" schema="schema/org.corpus_tools.atomic.processingComponents.custom.exsd"/>
   <extension-point id="org.corpus_tools.atomic.processingComponents.tokenizers" name="Tokenizer components for corpora" schema="schema/org.corpus_tools.atomic.processingComponents.tokenizers.exsd"/>

   <extension
         id="org.corpus_tools.atomic.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.corpus_tools.atomic.Atomic">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.corpus_tools.atomic.application"
            description="An extensible OS-independent multi-level annotation platform for linguistic corpora"
            name="Atomic">
         <property
               name="appName"
               value="Atomic">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.corpus_tools.atomic.menus.file"
               label="File"
               mnemonic="F"
               tooltip="The File menu provides access to basic application funtionalities">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="New Project"
                  mnemonic="P"
                  style="push">
            </command>
            <command
                  commandId="org.corpus_tools.atomic.commands.switchWorkspace"
                  label="Switch Workspace"
                  mnemonic="W"
                  style="push">
            </command>
            <command
                  commandId="org.corpus_tools.atomic.commands.exit"
                  label="Exit"
                  mnemonic="x"
                  style="push"
                  tooltip="Closes the workbench and quits Atomic">
            </command>
         </menu>
         <menu
               id="org.corpus_tools.atomic.menus.help"
               label="Help"
               mnemonic="H">
            <command
                  commandId="org.eclipse.ui.help.displayHelp"
                  label="Help Contents"
                  mnemonic="H"
                  style="push">
            </command>
            <menu
                  id="org.corpus_tools.atomic.menus.help.updates"
                  label="Updates"
                  mnemonic="U"
                  tooltip="Provides a menu for updating Atomic or parts of it.">
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.corpus_tools.atomic.AtomicNewWizardCategory"
            name="Atomic">
      </category>
      <primaryWizard
            id="org.corpus_tools.atomic.newAtomicProjectWizard">
      </primaryWizard>
      <wizard
            canFinishEarly="false"
            category="org.corpus_tools.atomic.AtomicNewWizardCategory"
            class="org.corpus_tools.atomic.projects.wizard.NewAtomicProjectWizard"
            icon="icons/obj16/atomic.png"
            id="org.corpus_tools.atomic.newAtomicProjectWizard"
            name="New Atomic Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.corpus_tools.atomic.commands.ExitHandler"
            description="Exits Atomic"
            id="org.corpus_tools.atomic.commands.exit"
            name="Exit Command">
      </command>
      <command
            defaultHandler="org.corpus_tools.atomic.commands.SwitchWorkspaceHandler"
            description="Allows the user to switch workspaces"
            id="org.corpus_tools.atomic.commands.switchWorkspace"
            name="Switch Workspace">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.corpus_tools.atomic.commands.exit"
            schemeId="org.corpus_tools.atomic.keyscheme"
            sequence="M1+Q">
      </key>
      <scheme
            id="org.corpus_tools.atomic.keyscheme"
            name="Atomic Key Binding Scheme"
            parentId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </scheme>
      <key
            commandId="org.corpus_tools.atomic.commands.switchWorkspace"
            schemeId="org.corpus_tools.atomic.keyscheme"
            sequence="M3+M2+W">
      </key>
      <key
            commandId="org.eclipse.ui.newWizard"
            schemeId="org.corpus_tools.atomic.keyscheme"
            sequence="M1+N">
      </key>
      <key
            commandId="org.eclipse.ui.help.displayHelp"
            schemeId="org.corpus_tools.atomic.keyscheme"
            sequence="F1">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="org.corpus_tools.atomic.views.navigation">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="org.corpus_tools.atomic.views.navigation">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.corpus_tools.atomic.ui.NavigationPerspective"
            id="org.corpus_tools.atomic.perspectives.navigation"
            name="Navigation Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.corpus_tools.atomic.perspectives.navigation">
         <view
               closeable="true"
               id="org.corpus_tools.atomic.views.navigation"
               minimized="false"
               moveable="true"
               ratio="0.2f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.corpus_tools.atomic.ui.AtomicSplashHandler"
            id="org.corpus_tools.atomic.splashHandler">
      </splashHandler>
      <splashHandlerProductBinding
            productId="org.corpus_tools.atomic.product"
            splashId="org.corpus_tools.atomic.splashHandler">
      </splashHandlerProductBinding>
   </extension>
